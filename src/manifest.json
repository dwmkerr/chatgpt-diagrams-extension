{
  "manifest_version": 3,
  "name": "ChatGPT Diagrams",
  "description": "Render diagrams directly in ChatGPT",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [{
    "js": ["content.js"],
    "matches": [
      "https://chat.openai.com/*",
      "http://localhost/*"
    ]
  }],
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
