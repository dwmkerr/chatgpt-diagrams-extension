{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "es2019"],
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "strict": true,
    "sourceMap": true,
    "target": "es2019",
    "types": ["node", "chrome"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
